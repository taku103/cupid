.message_function_container
  .top_c_user_container
    %ul.c_user_listsBox
      - @matches_items.each do |m_items|
        %li.c_user_list
          .imageBox
            = image_tag 'member_photo_noimage_thumb.png', class: 'match_c_user_imageBtn', id: m_items[:c_user].id
              
  .middle_user_container
    %ul.user_listsBox
      -# %li.user_list
      -#   .match_user_imageBox
