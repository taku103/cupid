.c_follower_container
  .search-result-container
    .main-searchBox
      .leftBox
        #c.searchBtn
          %i.fas.fa-search
          検索条件設定
      .centerBox
        - if @items.length != 0
          = @all_user_length
          人中
          = num = (@users.current_page - 1) * @element_per_page + 1
          &sim;
          = num - 1 + @items.length
          人表示中
      .rightBox
        = link_to "#", class: "BlockBtn" do
          %i.fas.fa-th
    %main.main_container
      - if @items.length != 0 then
        - for k in 0..3 do
          %ul.line_block
            - @items.each_with_index do |item, i|
              - if k == 0 then
                = render partial: "cmypage/li_render_list/c_user_list", locals: { image: item[:image], user: item[:user], i: i, k: k }
                -# - @c_users.shift()
                - if (i+1)%4 == 0 then
                  - break;
              - elsif k == 1 then
                - if i >= 4 && i <= 7
                  = render partial: "cmypage/li_render_list/c_user_list", locals: { image: item[:image], user: item[:user], i: i, k: k }
                  - if (i+1)%4 == 0 then
                    - break;
              - elsif k == 2 then
                - if i >= 8 && i <= 11
                  = render partial: "cmypage/li_render_list/c_user_list", locals: { image: item[:image], user: item[:user], i: i, k: k }
                  - if (i+1)%4 == 0 then
                    - break;
              - else
                - if i >= 12 && i <= 15
                  = render partial: "cmypage/li_render_list/c_user_list", locals: { image: item[:image], user: item[:user], i: i, k: k }
                  - if (i+1)%4 == 0 then
                    - break;
      = paginate @users
    .user_information
    .search_qualification
    = form_with class: "authenticity_token_form"
