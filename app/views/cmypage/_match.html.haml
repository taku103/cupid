.message_function_container
  .top_user_container
    %ul.user_listsBox
      - @items.each do |item|
        -# =item
        %li.user_list
          .imageBox
            - if item[:image] != nil
              = image_tag item[:image].image_url, class: 'match_user_imageBtn_up', id: item[:user].id
            - else
              = image_tag 'member_photo_noimage_thumb.png', class: 'match_user_imageBtn_up', id: item[:user].id
      
      
  .middle_user_container
    %ul.user_listsBox
    -#   %li.user_list
    -#     .imageBox
    -#       = image_tag 'member_photo_noimage_thumb.png', class: 'match_user_imageBtn_down', id: ""
  .messages_container
    .top_information
      ユーザー
      
    .top_messages
      
    .bottom_message
      = form_with(model: @message, url: create_message_cmypage_index_path, remote: true) do |form|
        -# = form_with(model: [@group, @message], local: true) do |form|
        = form.hidden_field :bool, value: 2, class: "new_message_bool"
        = form.hidden_field :match_c_user_id, value: current_c_user.id
        = form.hidden_field :user_id, value: 0, class: "new_message_user_id"
        .inputBox
          = form.text_area :content, placeholder: "メッセージを入力" , class: "match_textarea"
          = form.label :image, class: "image_label" do
            = form.file_field :image, class: "upload_image"
            %i.far.fa-image
          .submitView
            = form.submit "", class: "c_message_submitBtn"
            %i.far.fa-paper-plane
            

  